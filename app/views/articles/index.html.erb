<h1>Articles</h1>
<ul><% @articles.each do |a| %>
  <li>
    <%= a.title %>
    <br>
    <%= link_to "View Article", article_path(a) %>
    <%= link_to "Edit Article", edit_article_path(a) %>
    <%= link_to "Delete", article_path(a), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
  <br>
  <br>
  <% end %>
</ul>

<p><%= link_to "Create new article", new_article_path %></p>
